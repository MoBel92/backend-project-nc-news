{
  "GET /api": {
    "description": "Serves up a json representation of all the available endpoints of the API"
  },
  "GET /api/topics": {
    "description": "Serves an array of all topics",
    "queries": [],
    "exampleResponse": {
      "topics": [{ "slug": "football", "description": "Footie!" }]
    }
  },
  "GET /api/articles": {
    "description": "Serves an array of all articles with their comment count",
    "queries": [],
    "exampleResponse": {
      "articles": [
        {
          "author": "weegembump",
          "title": "Seafood substitutions are increasing",
          "article_id": 1,
          "topic": "cooking",
          "created_at": "2018-05-30T15:59:13.341Z",
          "votes": 0,
          "article_img_url": "https://images.pexels.com/photos/158651/news-newsletter-newspaper-information-158651.jpeg?w=700&h=700",
          "comment_count": 6
        }
      ]
    }
  },
  "GET /api/articles/:article_id": {
    "description": "Gets an article by its ID",
    "queries": [],
    "parameters": {
      "article_id": "The ID of the article to retrieve (integer)"
    },
    "exampleResponse": {
      "article": {
        "author": "butter_bridge",
        "title": "Living in the shadow of a great man",
        "article_id": 1,
        "body": "I find this existence challenging",
        "topic": "mitch",
        "created_at": "2020-07-10T15:06:00.000Z",
        "votes": 100,
        "article_img_url": "https://images.pexels.com/photos/158651/news-newsletter-newspaper-information-158651.jpeg?w=700&h=700"
      }
    },
    "errorResponses": {
      "400": "Invalid article ID",
      "404": "Article not found"
    }
  },
  "GET /api/articles/:article_id/comments": {
    "description": "Get all comments for a specific article by ID",
    "queries": [],
    "parameters": {
      "article_id": "The ID of the article to retrieve comments for (integer)"
    },
    "exampleResponse": {
      "comments": [
        {
          "comment_id": 1,
          "votes": 0,
          "created_at": "2020-07-10T20:00:00.000Z",
          "author": "butter_bridge",
          "body": "I found this article insightful",
          "article_id": 1
        }
      ]
    },
    "errorResponses": {
      "400": "Invalid article ID",
      "404": "Article not found"
    }
  }
}
